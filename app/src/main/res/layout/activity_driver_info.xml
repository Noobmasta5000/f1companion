<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="540px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="540px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/driver_name"
                        android:layout_width="match_parent"
                        android:layout_height="240px"
                        android:paddingStart="10px"
                        android:fontFamily="@font/formula1_regular" />

                    <ImageView
                        android:id="@+id/team_image"
                        android:layout_width="540px"
                        android:layout_height="300px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/teams" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/driver_image"
                    android:layout_width="540px"
                    android:layout_height="540px"
                    app:srcCompat="@drawable/helmet" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="540px"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="540px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="60px"
                        android:text="Current Season" />

                    <TextView
                        android:id="@+id/season_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />

                    <TextView
                        android:id="@+id/season_wins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="540px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="60px"
                        android:text="Birth Info" />

                    <TextView
                        android:id="@+id/nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />

                    <TextView
                        android:id="@+id/birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />

                    <TextView
                        android:id="@+id/birthplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="40px"
                        android:fontFamily="@font/formula1_regular" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="540px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="60px"
                    android:text="Historical Results" />

                <TextView
                    android:id="@+id/historical_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40px"
                    android:fontFamily="@font/formula1_regular" />

                <TextView
                    android:id="@+id/historical_wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40px"
                    android:fontFamily="@font/formula1_regular" />

                <TextView
                    android:id="@+id/historical_podiums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40px"
                    android:fontFamily="@font/formula1_regular" />

                <TextView
                    android:id="@+id/historical_races"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40px"
                    android:fontFamily="@font/formula1_regular" />

                <TextView
                    android:id="@+id/historical_championships"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40px"
                    android:fontFamily="@font/formula1_regular" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>